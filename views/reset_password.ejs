<%- include("header") %>

    <div class="max-width w3-container w3-padding-16">
        <div class="w3-center">
            <img src="<%= app_logo %>" class="w3-padding-16 w3-margin-top w3-container w3-circle w3-border app-logo" />
            <h3><%= app_name %></h3>
        </div>
        <div class="w3-border w3-round-large">
            <form method="POST" action="/auth/v1/<%=id%>/password/reset" class="w3-container w3-padding-16">
                <input type="hidden" name="app_id" value="<%=id%>" required />
                <input type="hidden" name="payload" value="<%=payload%>" required />
                <button class="w3-button w3-round-large w3-theme w3-block">Click this to confirm</button>
            </form>
        </div>
        <% if ( err && err.length > 0 ) { %>
            <ul class="w3-ul w3-theme-light w3-margin-top w3-round-large">
                <% err.map( er => { %>
                    <li><%= er %></li>
                <% }) %>
            </ul>
        <% } %>
    </div>

<%- include("footer") %>